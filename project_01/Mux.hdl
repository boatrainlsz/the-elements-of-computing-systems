/** 
 * Multiplexor.  If sel=0 then out = a else out = b.
 */

CHIP Mux {

    IN  a, b, sel;
    OUT out;

    PARTS:
	Not(in=sel, out=notsel);
	And(a=notsel, b=a, out=sela);
	And(a=sel, b=b, out=selb);
	Or(a=sela, b=selb, out=out);
}
